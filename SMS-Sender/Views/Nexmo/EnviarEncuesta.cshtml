@model SMS_Sender.Core.Models.Cliente
@{
    ViewBag.Title = "EnviarEncuesta";
}

<h2>Ingresa tu número de celular para recibir un código de Nexmo</h2>

@using (Html.BeginForm())
{
    <div class="form">
        <div class="form-group">
            @Html.LabelFor(n => n.Celular)
            <div class="col-md-10">
                @Html.EditorFor(n => n.Celular, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(n => n.Celular, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Check" class="btn btn-default" />
            </div>
        </div>
    </div>
}

